    <div class="main-right">
        <div class="review-title">
            <h2>LATEST REVIEWS</h2>
        </div>

        <div>
            <form id="search-review" name="search-review" method="post">
                <label>Search review by word/phrase</label>
                <input required id="search-review-input" name="search-review-input" type="text" placeholder="Search review by word/phrase"></input>
                <button class="comment-button" type="submit">Search</button>
            </form>
        </div>
        
        <div class="reviews-container">
            {{#each reviews}}
            <div id="{{_id}}" class="grid-item">
                <div class="review-header">
                    <div class="review-header-left">
                        <h3>{{title}}</h3>
                        Posted on {{date}}
                    </div>
                    <div>
                        <div class="star-rating" id="rating">
                            {{#each rating}}
                                {{#if this}}
                                    <svg xmlns="http://www.w3.org/2000/svg" class="star-on" viewBox="0 0 24 24" role="presentation">
                                        <path d="M12 17.27l4.15 2.51c.76.46 1.69-.22 1.49-1.08l-1.1-4.72 3.67-3.18c.67-.58.31-1.68-.57-1.75l-4.83-.41-1.89-4.46c-.34-.81-1.5-.81-1.84 0L9.19 8.63l-4.83.41c-.88.07-1.24 1.17-.57 1.75l3.67 3.18-1.1 4.72c-.2.86.73 1.54 1.49 1.08l4.15-2.5z"></path>
                                    </svg>
                                {{else}}
                                    <svg xmlns="http://www.w3.org/2000/svg" class="star-off" viewBox="0 0 24 24" fill="currentColor" role="presentation">
                                        <path d="M12 17.27l4.15 2.51c.76.46 1.69-.22 1.49-1.08l-1.1-4.72 3.67-3.18c.67-.58.31-1.68-.57-1.75l-4.83-.41-1.89-4.46c-.34-.81-1.5-.81-1.84 0L9.19 8.63l-4.83.41c-.88.07-1.24 1.17-.57 1.75l3.67 3.18-1.1 4.72c-.2.86.73 1.54 1.49 1.08l4.15-2.5z"></path>
                                    </svg>
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="review-body">
                    <p>{{content}}</p>
                </div>
                {{#if image}}
                <div class="review-picture">
                    <img src="{{image}}"/>
                </div>
                {{/if}}
                <div class="review-footer">
                    <div class="review-profile">
                        <a href="/profile/{{author.user}}">
                            <img src="{{author.picture}}"/>
                        </a>
                        <div>
                            <a href="/profile/{{author.user}}">
                                <b>{{author.user}}</b>
                            </a>
                            
                            <br/>{{author.job}}
                        </div>
                    </div>
                    <div class="react-post">
                        <div class="icon-like">
                            <button type="button" class="fa fa-thumbs-up {{#if userLike.isLike}}clicked{{/if}}"></button>
                            <button type="button" class="fa fa-thumbs-down {{#if_eq userLike.isLike '0'}}clicked{{/if_eq}}"></button>
                        </div>
                        <span class="total-likes">{{totalLikes}} people liked</span> 
                    </div>
                </div>

                <div><hr/><h4>Comments:</h4></div>
                
                <form class="create-comment-form" method="post">
                    <div class="comment-container">
                        <textarea class="comment-textarea" placeholder="Write your comment here..."></textarea>
                        <button class="comment-button">Comment</button>
                    </div>
                </form>

                <div class="comments">
                {{#each comments}}
                    <div class="comment">
                        <div>
                            <a href="/profile/{{user.user}}"><img src="{{user.picture}}"/></a>
                        </div>
                        <div class="comment-right">
                            <div>
                                <a href="/profile/{{user.user}}"><b>{{user.user}}</b></a> 
                                <span class="verified-checkmark">{{#if_eq user.job 'Owner'}}✔️{{/if_eq}}</span>
                                {{date}}
                            </div>
                            <div>
                                <p>{{content}}</p>
                            </div>
                        </div>
                        
                    </div> 
                {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>